<div class="listWrap">
    <h4>To do</h4>
    <ul id="myList" class="list">
        {{#each tasks}}
            {{#unless done}}
                <li class="task">
                    <a
                        href="/checked/{{_id}}"
                        class="linkname"
                    >{{description}}</a>
                    <a href="/edit/{{_id}}" class="close">E</a>
                    <a href="/del/{{_id}}" class="close">X</a>
                </li>
            {{/unless}}
        {{/each}}
    </ul>
</div>
<div class="listWrap">
    <h4>Done</h4>
    <ul id="doneList" class="list">
        {{#each tasks}}
            {{#if done}}
                <li class="task">
                    <a
                        href="/checked/{{_id}}"
                        class="linkname isdone"
                    >{{description}}</a>
                    <a href="/edit/{{_id}}" class="close">E</a>
                    <a href="/del/{{_id}}" class="close">X</a>
                </li>
            {{/if}}
        {{/each}}
    </ul>
</div>
<form method="POST" action="http://localhost:3000/edit/{{id}}" class="editform">
    <input
        type="text"
        name="description"
        placeholder="Change description"
        value="{{description}}"
    />
    <button type="submit" value="Save" id="saveBut">Save</button>
</form>